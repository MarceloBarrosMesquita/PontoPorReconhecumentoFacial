    <script>
        //Onload page
        $(document).ready(function(){
            var arrDados = permissaoMenu();
            if (arrDados.data['arrMenuComercial'] == true){
                $("#exibir_comercial").show();
            }
            if (arrDados.data['arrMenuOperacional'] == true){
                $("#exibir_operacional").show();
            }
            if (arrDados.data['arrMenuCompraEstoque'] == true){
                $("#exibir_compra_estoque").show();
            }
            if (arrDados.data['arrMenuRh'] == true){
                $("#exibir_rh").show();
            }
            if (arrDados.data['arrMenuFinanceiro'] == true){
                $("#exibir_financeiro").show();
            }
            if (arrDados.data['arrMenuRelatorio'] == true){
                $("#exibir_relatorio").show();
            }
            if (arrDados.data['arrMenuAdministracao'] == true){
                $("#exibir_adm").show();
                $("#exibir_edit_usuario").show();
            }
            if (arrDados.data['arrMenuCpainel'] == true){
                $("#exibir_cpainel").show();
            }
        });

        function logout(){
            utilsJS.jqueryConfirm('Sair?', 'Deseja sair do sistema?', function () {
                $.ajax({
                    type: 'POST',
                    url: '/api/auth/logout',
                    data: {},
                    complete: function (response) {
                        try {
                            let log = JSON.parse(response.responseText);
                            if(log.status == true){
                                location.reload();
                            }
                        } catch (e) {
                            utilsJS.sweetMensagem(false, 'Ocorreu um erro na requisição<br /> Contate o suporte');
                        }
                    }
                });
            });
        }
    </script>
